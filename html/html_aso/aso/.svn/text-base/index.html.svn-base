<script type="text/javascript">
    seajs.use('aries-main',function(){
		 $.cookie($.aries.config.sec.SEC_AUTH_ROLETYPE_KEY, "Customer", {path : '/'});
         var currentUser =  $.cookie("login_customer_id");
         if(currentUser){
             $('#currentUser').html(currentUser);
         }else{
              $('.product-signIn-btn').show();
              $('.user-name').find('span').hide();
              $('.user-name').find('#currentUser').hide();
         }

        var platformVersion  = '[{"text":"AppEngine V4.1","value":"4.1"},{"text":"AppEngine V4.2","value":"4.2"}]';
     	$("#platformVersion").aeCombo('reload',$.parseJSON(platformVersion)); 
     	
     	var architecture  = '[{"text":"EBOSS","value":"EBOSS"},{"text":"TBOSS","value":"TBOSS"}]';
      	$("#architecture").aeCombo('reload',$.parseJSON(architecture)); 
    });
    $(".ide-discripation").on('click','h1',function(){
    	var type= $(this).attr('type');
        if("mini" == type){
            window.location = '/aso/mini.html';
        }else if("standard" == type){
            window.location = '/aso/standard.html';
        }
    });
    function cclearnMore(){
        window.location = '/aso/ccDetail.html';
    }
    
    function fillEnvInfo(type){
    	if("dev" == type){
    		$.openPopupDiv('envInfo','Environment Architectural Info','900','50',{"initAfterAction":"initpopupEnvInfoDiv()","afterAction":"doAfterActionForEnvInfoDiv()","onConfirm":"doConfirmForEnvInfoDiv()","draggable":true,"resizable":true});
    	}
    	if("svn" == type){
    		$.openPopupDiv('svnInfo','Svn Info','600','50',{"initAfterAction":"initpopupSvnInfoDiv()","afterAction":"doAfterActionForSvnInfoDiv()","onConfirm":"doConfirmForSvnInfoDiv()","draggable":true,"resizable":true});
    	}
    }
    
    function doConfirmForSvnInfoDiv(){
    	var projectCode = $('#projectCode').aeTextfield('getValue');
    	var custLoginId = $.cookie("login_customer_id");
    	if(undefined==custLoginId){
			$.message.alert("","Please log in!");
			return;
		}
    	$("#global_loading").show();
		var cond =  "".appendParam('projectCode',projectCode);
		$.aries.ajax.post($.aries.service.aso.installSvn, cond, function(data) {
			$("#global_loading").hide();
			 $.message.success("","",function(){
				 $.closePopupDiv();
			 },function(code,info){
			    $.message.error("","Operation fail，info:"+info.hub_value[0].code);
	    });
		}, function(code, info) {

			$("#global_loading").hide();
			if(undefined==info.hub_value[0]){
	             $.message.error("","Operation failed!");
			 }else if("AISEC0002"==info.hub_value[0].code){
			     $.message.error("","No service permission,please log in!");
			 }else if("AISEC0003"==info.hub_value[0].code){
			     $.message.error("","No service permission!");
			 }else{
	             $.message.error("","Operation failed,code:"+info.hub_value[0].code+",info:"+info.hub_value[0].value);
			 }
		
		});
		$("#global_loading").show();
		
    }
    
    function doConfirmForEnvInfoDiv(){
    	var platformVersion = $('#platformVersion').aeCombo('getValue');
    	var architecture = $('#architecture').aeCombo('getValue');
    	var custLoginId = $.cookie("login_customer_id");
    	if(undefined==custLoginId){
			$.message.alert("","Please log in!");
			return;
		}
    	$("#global_loading").show();
		var cond =  "".appendParam('prodOfferCode','APPENGINE_DEV_ENV').appendParam('custLoginId',custLoginId).appendParam('orderType','anonymous').appendParam('platformVersion',platformVersion).appendParam('architecture',architecture);
		$.aries.ajax.post($.aries.service.aso.addOrder, cond, function(data) {
			$("#global_loading").hide();
			 $.message.success("","",function(){
				 $.closePopupDiv();
			 },function(code,info){
			    $.message.error("","Operation fail，info:"+info.hub_value[0].code);
	    });
		}, function(code, info) {

			$("#global_loading").hide();
			if(undefined==info.hub_value[0]){
	             $.message.error("","Operation failed!");
			 }else if("AISEC0002"==info.hub_value[0].code){
			     $.message.error("","No service permission,please log in!");
			 }else if("AISEC0003"==info.hub_value[0].code){
			     $.message.error("","No service permission!");
			 }else{
	             $.message.error("","Operation failed,code:"+info.hub_value[0].code+",info:"+info.hub_value[0].value);
			 }
		
		});
		$("#global_loading").show();
		
    }

</script>
